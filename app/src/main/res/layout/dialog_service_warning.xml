<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_area_warning_background"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/cl_area_warning"
        android:background="@drawable/white_dailog_background"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt_area_warning_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:textSize="16sp"
            android:text="서비스가 지원되는 지역이 아니예요"
            android:textColor="#ff6359"
            android:includeFontPadding="false"
            android:layout_marginTop="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_area_warning_content2"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/txt_area_warning_content2"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_cjk_kr_regular"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@id/btn_area_warning_ok"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorBlack"
            android:text="한국에서 크래블을 즐겨봐요"/>
        
        <Button
            android:id="@+id/btn_area_warning_ok"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/coral_round_background"
            android:layout_marginTop="24dp"
            android:textColor="@color/colorWhite"
            android:text="확인"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_area_warning_tiger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_no_area_tiger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>