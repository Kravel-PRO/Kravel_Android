<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_near_place"
        android:layout_width="184dp"
        android:layout_height="204dp"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_place"
        app:layout_constraintBottom_toBottomOf="@id/img_near_place"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="@id/img_near_place"
        app:layout_constraintStart_toStartOf="@id/img_near_place"
        app:layout_constraintTop_toTopOf="@id/img_near_place"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_home_near_place_title"
        android:textSize="16sp"
        tools:text="호텔 세느장"
        android:fontFamily="@font/notosans_cjk_kr_bold"
        app:layout_constraintVertical_bias="0.85"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_home_near_place_tag1"
        android:textSize="12sp"
        tools:text="호텔 세느장"
        android:fontFamily="@font/notosans_cjk_kr_regular"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_home_near_place_title" />

</androidx.constraintlayout.widget.ConstraintLayout>