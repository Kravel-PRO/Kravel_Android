<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_area_warning_background"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/cl_area_warning"
        android:background="@drawable/white_dailog_background"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt_area_warning_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:textSize="16sp"
            android:text="앱 접근 권한 허용"
            android:textColor="#ff6359"
            android:includeFontPadding="false"
            android:layout_marginTop="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_area_warning_content2"
            app:layout_constraintRight_toRightOf="parent"/>



        <TextView
            android:id="@+id/txt_area_warning_content2"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_cjk_kr_regular"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/cl_area_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorBlack"
            android:text="사진 촬영을 위해 \n
아래와 같은 권한을 허용해주세요."
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cl_area_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_grey_dailog_background"
            app:layout_constraintBottom_toTopOf="@id/btn_access_false">


            <ImageView
                android:id="@+id/img_photo_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카메라"
                android:id="@+id/txt_camera_title"
                android:fontFamily="@font/notosans_cjk_kr_bold"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="14dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toRightOf="@id/img_photo_ic"
                app:layout_constraintTop_toTopOf="@id/img_photo_ic"
                app:layout_constraintBottom_toBottomOf="@id/img_photo_ic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 사진 촬영"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/txt_camera_title"
                app:layout_constraintLeft_toLeftOf="@id/txt_camera_title"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/btn_access_false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/grey_round_background"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="허용안함"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15sp"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_access_true"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/btn_access_true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/selector_btn_enable_background"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="허용"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_access_false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_access_false"
            app:layout_constraintTop_toTopOf="@+id/btn_access_false" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_area_warning_tiger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_access_tiger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>