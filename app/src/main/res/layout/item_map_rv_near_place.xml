<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_rv_map_near_place"
        android:layout_width="116dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/img_rv_map_near_view"
        android:layout_width="116dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#73272727"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="장소"
        android:id="@+id/txt_rv_map_near_place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_cjk_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/img_rv_map_near_place"/>

</androidx.constraintlayout.widget.ConstraintLayout>